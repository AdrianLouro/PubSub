{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}